Jsp <: Base {

// OVERRIDES
macro
  := "tml:tr"
  
comment
  := startComment (~endComment any)* endComment
  
startComment
  = "<" space * "!" space* "--" space*

endComment
  = "--" space* ">"
  
stringNonLiteral
  := "${"
  
tmlLocalizedString
  := xmlTagWithAttribute<macro, tmlAttributeExp> --tmlInAttribute 
  | xmlTagWithContent<macro, tmlLocalizedTagContent> --tmlInTag

// END OVERRIDES
  
tmlAttributeExp
  = "label" "=" stringLiteral
  
tmlLocalizedTagContent
  = tagStringChar+
  
tagStringChar
  = ~("<" | codeMarkup) any
  
// Special Markup
codeMarkup
  = "${" (~"}" any)* "}"

}